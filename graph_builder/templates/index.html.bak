    <script>
        // Script para gerar o gráfico
        function generateChart() {
            const fileInput = document.getElementById('fileInput');
            const chartType = document.getElementById('chartType').value;

            if (!fileInput.files || !fileInput.files[0]) {
                alert('Por favor, selecione um arquivo Excel ou CSV.');
                return;
            }

            const file = fileInput.files[0];
            const reader = new FileReader();

            reader.onload = function(event) {
                const data = event.target.result;
                let workbook;

                if (file.name.endsWith('.csv')) {
                    // Processar arquivo CSV
                    const csvData = data.trim().split('\n').map(row => row.split(','));
                    const labels = csvData.slice(1).map(row => row[0]);
                    const values = csvData.slice(1).map(row => parseFloat(row[1]));

                    createChart(labels, values, chartType);
                } else if (file.name.endsWith('.xls') || file.name.endsWith('.xlsx')) {
                    // Processar arquivo Excel
                    const binary = new Uint8Array(data);
                    workbook = XLSX.read(binary, { type: 'array' });
                    const sheetName = workbook.SheetNames[0];
                    const worksheet = workbook.Sheets[sheetName];
                    const jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });

                    const labels = jsonData.slice(1).map(row => row[0]);
                    const values = jsonData.slice(1).map(row => parseFloat(row[1]));

                    createChart(labels, values, chartType);
                } else {
                    alert('Formato de arquivo não suportado.');
                }
            };

            if (file.name.endsWith('.csv')) {
                reader.readAsText(file);
            } else {
                reader.readAsArrayBuffer(file);
            }
        }

        function createChart(labels, values, chartType) {
            const ctx = document.getElementById('myChart').getContext('2d');

            // Remover o gráfico existente, se houver
            if (window.myChart instanceof Chart) {
                window.myChart.destroy();
            }

            // Gerar uma paleta de cores harmoniosa
            const colors = [
                '#3498db', '#e74c3c', '#2ecc71', '#9b59b6',
                '#f1c40f', '#e67e22', '#1abc9c', '#34495e'
            ];

            window.myChart = new Chart(ctx, {
                type: chartType,
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Dados Carregados',
                        data: values,
                        backgroundColor: colors,
                        borderColor: '#ffffff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#ffffff'
                            }
                        }
                    },
                    scales: chartType === 'pie' || chartType === 'radar' ? {} : {
                        x: {
                            ticks: {
                                color: '#ffffff'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            ticks: {
                                color: '#ffffff'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            }
                        }
                    }
                }
            });
        }
    </script>
